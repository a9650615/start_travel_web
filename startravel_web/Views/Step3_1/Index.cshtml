                <div class="table-mobile infoBlock">
                    <span class="text-purple">@cus_name.ToString()<br>@Html.DisplayFor(modelitem => item_cus.CUS_E_NAME).ToString() @cus_sex_s</span>
                    <div class="orderDetails-mobile mt-10">
                        <div class="row">
                            <div class="col-xs-12 pl-0">
                                商品名稱
                            </div>
